{
  "name": "orbitkit",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive, opinionated company monorepo boilerplate",
  "license": "MIT",
  "author": "OrbitKit",
  "type": "module",
  "scripts": {
    "clean": "rimraf --glob **/node_modules **/dist **/.next **/.astro **/storybook-static **/.turbo pnpm-lock.yaml",
    "format": "pnpm format:write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/.eslintcache --max-warnings 0",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\"",
    "lint:spell": "cspell \"**\"",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/prompt-cli": "^18.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@orbitkit/tsconfig": "workspace:*",
    "@types/eslint": "^8.56.2",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-orbitkit": "workspace:^",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.38.0",
    "prettier": "^3.2.4",
    "prettier-plugin-curly": "^0.1.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "20.11.0",
    "pnpm": "8.14.1"
  }
}
