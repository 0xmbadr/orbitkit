{
  "name": "orbitkit",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive, opinionated company monorepo boilerplate",
  "license": "MIT",
  "author": "OrbitKit",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "format": "bun format:write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\"",
    "lint:spell": "cspell \"**\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/prompt-cli": "^18.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@orbitkit/tsconfig": "workspace:*",
    "cspell": "^8.3.2",
    "husky": "^8.0.3",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.38.0",
    "prettier": "^3.2.4",
    "prettier-plugin-curly": "^0.1.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.3"
  }
}
