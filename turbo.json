{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "//#format:check": {
      "cache": true
    },
    "//#lint:md": {
      "cache": true,
      "inputs": ["**/*.md", ".github/**/*.md"]
    },
    "//#lint:spell": {
      "cache": true
    },
    "//#lint": {
      "cache": true,
      "outputs": [".eslintcache"]
    },
    "typecheck": {
      "cache": true,
      "outputs": [".tsbuildinfo"]
    },
    "//#typecheck": {
      "cache": true,
      "outputs": [".tsbuildinfo"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "test-storybook": {
      "cache": true
    },
    "db:check": {},
    "db:generate": {},
    "db:migrate": {},
    "db:pull": {},
    "db:push": {},
    "db:studio": {},
    "db:up": {}
  }
}
