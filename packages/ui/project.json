{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.tsup"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        {
          "projects": ["!vite", "!storybook"],
          "target": "build"
        }
      ]
    }
  }
}
